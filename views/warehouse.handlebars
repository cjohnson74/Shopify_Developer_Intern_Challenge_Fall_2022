<h1><span data-id={{id}} id="warehouse-id"></span>
  {{location}}
  <small class="text-muted">{{name}}</small>
</h1>
<h4>Create a New Warehouse Inventory Item:</h4>
<form class="form" id="new-inventoryItem-form">
  <div class="mb-3">
    <label for="inventoryItem_location">Inventory Item Name:</label>
    <textarea
      type="text"
      class="form-control"
      id="inventoryItem-name"
      name="inventoryItem-name"
    ></textarea>
  </div>
  <div class="mb-3">
    <label for="inventoryItem_price">Inventory Item Price:</label>
    <textarea
      type="text"
      class="form-control"
      id="inventoryItem-price"
      name='inventoryItem-price'
    ></textarea>
  </div>
  <div class="mb-3">
    <label for="inventoryItem_stock">Number of Units:</label>
    <textarea
      type="text"
      class="form-control"
      id="inventoryItem-stock"
      name='inventoryItem-stock'
    ></textarea>
  </div>
  <div class="mb-3 form-check">
      <button type="submit" class="btn btn-primary">+ Create Inventory Item</button>
  </div>
</form>
<h4>Current Warehouse Inventory:</h4>
<table class="table table-striped">
  <thead>
    <tr>
      <th scope="col">ID#</th>
      <th scope="col">Name</th>
      <th scope="col">Price</th>
      <th scope="col">Number of Units</th>
    </tr>
  </thead>
  <tbody>
    {{#if inventoryItems.length}}
      {{#each inventoryItems as |inventoryItem|}}
        <tr>
          <th scope="row">{{inventoryItem.id}}</th>
          <td>{{inventoryItem.name}}</td>
          <td>{{inventoryItem.price}}</td>
          <td>{{inventoryItem.stock}}</td>
        </tr>
      {{/each}}
    {{/if}}
  </tbody>
</table>